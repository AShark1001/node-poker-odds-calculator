{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--recursive",
        "--timeout",
        "4000",
        "--colors",
        "--compilers",
        "ts:ts-node/register",
        "--bail"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}